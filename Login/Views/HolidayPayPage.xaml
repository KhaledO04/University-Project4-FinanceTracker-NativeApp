<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinApp.Views.HolidayPayPage"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto,Auto,*"
          Padding="20">
        <Label Grid.Row="0"
               Text="Holiday pay"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,20,0,20" />

        <Picker Grid.Row="1"
                Title="Select Job"
                ItemsSource="{Binding Jobs}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding SelectedJob}"
                Margin="0,0,0,10" />

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding HolidayPays}"
                        SelectionMode="None">
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center"
                                     VerticalOptions="Center">
                    <Label Text="No holiday pay found"
                           FontSize="18"
                           HorizontalOptions="Center" />
                    <Label Text="Holiday pay will appear here when available"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Frame BorderColor="LightGray"
                               CornerRadius="10"
                               HasShadow="True"
                               Padding="15">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="{Binding JobName}"
                                           FontSize="16"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding AccrualStart, StringFormat='Period: {0:dd/MM/yyyy}'}"
                                           FontSize="14" />
                                    <Label Text="{Binding AccrualEnd, StringFormat='To: {0:dd/MM/yyyy}'}"
                                           FontSize="14" />
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1"
                                                     HorizontalOptions="End">
                                    <Label Text="{Binding Amount, StringFormat='{0:C2}'}"
                                           FontSize="16"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding IsPaid, Converter={StaticResource BoolToStatusConverter}}"
                                           FontSize="14"
                                           TextColor="{Binding IsPaid, Converter={StaticResource BoolToColorConverter}}" />
                                    <Label Text="{Binding PaymentDate, StringFormat='Paid: {0:dd/MM/yyyy}'}"
                                           FontSize="14"
                                           IsVisible="{Binding IsPaid}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator Grid.Row="2"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
    </Grid>
</ContentPage>