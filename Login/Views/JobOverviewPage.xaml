<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinApp.Views.JobOverviewPage"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto,*,Auto"
          Padding="20">
        <Label Grid.Row="0"
               Text="Job overview"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,20,0,20" />

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Jobs}"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding JobSelectedCommand}"
                        SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center"
                                     VerticalOptions="Center">
                    <Label Text="No jobs found"
                           FontSize="18"
                           HorizontalOptions="Center" />
                    <Label Text="Add a job to get started"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Frame BorderColor="LightGray"
                               CornerRadius="10"
                               HasShadow="True"
                               Padding="15">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding EmploymentType}"
                                       FontSize="14"
                                       TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="2"
                Text="Add job"
                Command="{Binding AddJobCommand}"
                BackgroundColor="#4CAF50"
                TextColor="White"
                HorizontalOptions="Center"
                Margin="0,10,0,20" />

        <ActivityIndicator Grid.Row="1"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
    </Grid>
</ContentPage>