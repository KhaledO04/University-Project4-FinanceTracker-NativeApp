<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MinApp.Views.LoginPage"
    Title="Log ind">
    <VerticalStackLayout Padding="30" Spacing="10">
        <Label Text="Indtast loginoplysninger:" FontAttributes="Bold" FontSize="Medium" />
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Adgangskode" IsPassword="True" Text="{Binding Adgangskode}" />
        <Button Text="Log ind" Command="{Binding LogIndKommando}" />
        <Label Text="{Binding Fejlbesked}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
